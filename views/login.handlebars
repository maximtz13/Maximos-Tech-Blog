<form class="login-form m-5 card">
  <h3 class="card-header text-uppercase text-c">Login Here</h3>
  <div class="card-body">
    <div>
      <label for="email-login">email:</label>
      <input type="text" id="email-login" class="form-input" />
    </div>
    <div>
      <label for="password-login">password:</label>
      <input type="password" id="password-login" class="form-input" />
    </div>
    <div>
      <button type="submit" class="btn btn2">login</button>
    </div>
  </div>
</form>

<form class="signup-form m-5 card">
  <h3 class="card-header text-uppercase text-c">Signup Here</h3>
  <div class="card-body">
    <div>
      <label for="username-signup">username:</label>
      <input type="text" id="username-signup" class="form-input" />
    </div>
    <div>
      <label for="email-signup">email:</label>
      <input type="text" id="email-signup" class="form-input" />
    </div>
    <div>
      <label for="password-signup">password:</label>
      <input type="password" id="password-signup" class="form-input" />
    </div>
    <div>
      <button type="submit" class="btn btn2">signup</button>
    </div>
  </div>
</form>

<script src="/javascript/login.js"></script>